{
  "name": "coc-css-block-comments",
  "version": "0.1.1",
  "description": "Creates css block identifier comments",
  "author": "Thomas Rasmussen <trasmussen34@gmail.com>",
  "license": "MIT",
  "main": "lib/index.js",
  "keywords": [
    "coc.nvim",
    "css-block-comments"
  ],
  "engines": {
    "coc": "^0.0.70"
  },
  "scripts": {
    "clean": "rimraf lib",
    "watch": "webpack --watch",
    "build": "webpack",
    "prepare": "npm-run-all clean build"
  },
  "devDependencies": {
    "@types/node": "^13.1.2",
    "coc.nvim": "^0.0.74",
    "eslint": "^6.8.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.4",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "contributes": {
    "commands": [
      {
        "title": "Get file types",
        "category": "CssBlockComments",
        "command": "cssBlockComments.formatFiles"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "coc-css-block-comments configuration",
      "properties": {
        "cssBlockComments.formatOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Enables auto formatting on save"
        },
        "cssBlockComments.enabledLanguages": {
          "type": "array",
          "default": [
            "css",
            "scss"
          ],
          "description": "Language Types the extension is active for"
        }
      }
    }
  }
}
